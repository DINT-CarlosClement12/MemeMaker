<Application x:Class="MemeMaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MemeMaker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="10,5,10,0"/>
            <Setter Property="Maximum" Value="900"/>
            <Setter Property="Minimum" Value="500"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Value" Value="750"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="memeText">
            <Setter Property="FontFamily" Value="Impact"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Application.Resources>
</Application>
